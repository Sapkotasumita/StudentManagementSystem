    <children>
        <!-- Text Fields and Labels -->
        <TextField fx:id="studentIdField" layoutX="163.0" layoutY="53.0" />
        <TextField fx:id="counselorField" layoutX="163.0" layoutY="99.0" />
        <DatePicker fx:id="datePicker" layoutX="163.0" layoutY="150.0" />

        <Button layoutX="53.0" layoutY="219.0" onAction="#handleAdd" text="Add" />
        <Button layoutX="150.0" layoutY="219.0" onAction="#handleRemove" text="Remove" />
        <Button layoutX="247.0" layoutY="219.0" onAction="#handleSave" text="Save" />
        <Button layoutX="344.0" layoutY="219.0" onAction="#handleCancel" text="Cancel" />

        <Label layoutX="49.0" layoutY="60.0" text="Student ID" />
        <Label layoutX="49.0" layoutY="104.0" text="Counselor" />
        <Label layoutX="53.0" layoutY="157.0" text="Date" />

