        <TableView fx:id="counselingTable" layoutX="50.0" layoutY="260.0" prefHeight="200.0" prefWidth="500.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="260.0">
            <columns>
                <TableColumn fx:id="studentIdColumn" text="Student ID" prefWidth="150.0"/>
                <TableColumn fx:id="counselorColumn" text="Counselor" prefWidth="200.0"/>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="150.0"/>
            </columns>
        </TableView>
    </children>
    <stylesheets>
        <URL value="@counseling.css" />
    </stylesheets>
</AnchorPane>
