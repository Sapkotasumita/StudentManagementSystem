<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@report.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dsgroup1.Controller.ReportsController">
    <children>
        <!-- Text Fields and Labels -->
        <TextField fx:id="reportIdField" layoutX="163.0" layoutY="53.0" />
        <TextField fx:id="reportNameField" layoutX="163.0" layoutY="99.0" />
        <TextField fx:id="reportContentField" layoutX="163.0" layoutY="145.0" />
        <ChoiceBox fx:id="progressChoiceBox" layoutX="163.0" layoutY="190.0" />
        <ChoiceBox fx:id="gradeChoiceBox" layoutX="163.0" layoutY="235.0" />

        <Button layoutX="53.0" layoutY="300.0" onAction="#handleAdd" text="Add Report" />
        <Button layoutX="174.0" layoutY="300.0" onAction="#handleRemove" text="Remove Report" />
        <Button layoutX="315.0" layoutY="300.0" onAction="#handleSubmit" text="Submit" />
        <Button layoutX="410.0" layoutY="300.0" onAction="#handleCancel" text="Cancel" />

        <Label layoutX="49.0" layoutY="60.0" text="Report ID" />
        <Label layoutX="49.0" layoutY="106.0" text="Report Name" />
        <Label layoutX="49.0" layoutY="152.0" text="Content" />
        <Label layoutX="49.0" layoutY="197.0" text="Progress" />
        <Label layoutX="49.0" layoutY="242.0" text="Grade" />

        <!-- TableView for report records -->
        <TableView fx:id="reportTable" layoutX="50.0" layoutY="350.0" prefHeight="200.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="reportIdColumn" prefWidth="100.0" text="Report ID" />
                <TableColumn fx:id="reportNameColumn" prefWidth="200.0" text="Report Name" />
                <TableColumn fx:id="reportContentColumn" prefWidth="250.0" text="Content" />
                <TableColumn fx:id="progressColumn" prefWidth="100.0" text="Progress" />
                <TableColumn fx:id="gradeColumn" prefWidth="100.0" text="Grade" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
