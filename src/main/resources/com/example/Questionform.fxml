<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" stylesheets="@questionform.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dsgroup1.Controller.QuestionformController">
    <children>
        <!-- Text Fields and Labels -->
        <TextField fx:id="questionIdField" layoutX="163.0" layoutY="53.0" />
        <TextField fx:id="questionText" layoutX="163.0" layoutY="99.0" />
        <TextArea fx:id="questionDescription" layoutX="163.0" layoutY="150.0" prefHeight="75.0" prefWidth="200.0" />

        <Button layoutX="53.0" layoutY="250.0" onAction="#handleSave" text="Save" />
        <Button layoutX="150.0" layoutY="250.0" onAction="#handleCancel" text="Cancel" />

        <Label layoutX="49.0" layoutY="60.0" text="Question ID" />
        <Label layoutX="49.0" layoutY="104.0" text="Question" />
        <Label layoutX="53.0" layoutY="157.0" text="Description" />

        <!-- TableView for question records -->
        <TableView fx:id="questionTable" layoutX="50.0" layoutY="300.0" prefHeight="150.0" prefWidth="500.0">
            <columns>
                <TableColumn fx:id="questionIdColumn" text="Question ID" prefWidth="100.0"/>
                <TableColumn fx:id="questionTextColumn" text="Question" prefWidth="200.0"/>
                <TableColumn fx:id="questionDescriptionColumn" text="Description" prefWidth="200.0"/>
            </columns>
        </TableView>
    </children>
</AnchorPane>
