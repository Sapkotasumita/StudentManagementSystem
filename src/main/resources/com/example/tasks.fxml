<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dsgroup1.Controller.TaskController">
    <stylesheets>
        <URL value="@tasks.css" />
    </stylesheets>
    <children>
        <!-- Text Fields and Labels -->
        <TextField fx:id="taskIdField" layoutX="150.0" layoutY="50.0" />
        <TextArea fx:id="taskDescription" layoutX="150.0" layoutY="130.0" prefHeight="159.0" prefWidth="264.0" />
        <DatePicker fx:id="taskDueDate" layoutX="150.0" layoutY="87.0" />

        <Label layoutX="50.0" layoutY="50.0" text="Task ID:" />
        <Label layoutX="43.0" layoutY="130.0" text="Description:" />
        <Label layoutX="49.0" layoutY="91.0" text="Due Date:" />

        <!-- Buttons -->
        <Button layoutX="52.0" layoutY="312.0" onAction="#handleAdd" text="Add" />
        <Button layoutX="132.0" layoutY="312.0" onAction="#handleRemove" text="Remove" />
        <Button layoutX="252.0" layoutY="312.0" onAction="#handleSubmit" text="Submit" />
        <Button layoutX="348.0" layoutY="312.0" onAction="#handleCancel" text="Cancel" />

        <!-- TableView for Tasks -->
        <TableView fx:id="taskTable" layoutX="43.0" layoutY="347.0" prefHeight="191.0" prefWidth="435.0">
            <columns>
                <TableColumn fx:id="taskIdColumn" prefWidth="97.33334350585938" text="Task ID" />
                <TableColumn fx:id="taskDescriptionColumn" prefWidth="208.6666259765625" text="Description" />
                <TableColumn fx:id="taskDueDateColumn" prefWidth="128.0" text="Due Date" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
