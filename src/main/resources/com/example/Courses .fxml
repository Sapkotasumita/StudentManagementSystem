<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dsgroup1.Controller.CoursesController">
    <children>
        <!-- Text Fields and Labels -->
        <TextField fx:id="courseIdField" layoutX="163.0" layoutY="53.0" />
        <TextField fx:id="courseNameField" layoutX="163.0" layoutY="99.0" />
        <TextField fx:id="instructorField" layoutX="163.0" layoutY="150.0" />
        <TextField fx:id="courseDurationField" layoutX="163.0" layoutY="201.0" />
        <ChoiceBox fx:id="courseTypeChoiceBox" layoutX="163.0" layoutY="252.0" />

        <Button layoutX="53.0" layoutY="309.0" onAction="#handleAdd" text="Add" />
        <Button layoutX="150.0" layoutY="309.0" onAction="#handleRemove" text="Remove" />
        <Button layoutX="247.0" layoutY="309.0" onAction="#handleSave" text="Save" />
        <Button layoutX="344.0" layoutY="309.0" onAction="#handleCancel" text="Cancel" />

        <Label layoutX="49.0" layoutY="60.0" text="Course ID" />
        <Label layoutX="49.0" layoutY="104.0" text="Course Name" />
        <Label layoutX="49.0" layoutY="157.0" text="Instructor" />
        <Label layoutX="49.0" layoutY="208.0" text="Duration" />
        <Label layoutX="49.0" layoutY="259.0" text="Course Type" />

        <!-- TableView for course records -->
        <TableView fx:id="coursesTable" layoutX="50.0" layoutY="360.0" prefHeight="200.0" prefWidth="500.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="360.0">
            <columns>
                <TableColumn fx:id="courseIdColumn" text="Course ID" prefWidth="100.0"/>
                <TableColumn fx:id="courseNameColumn" text="Course Name" prefWidth="150.0"/>
                <TableColumn fx:id="instructorColumn" text="Instructor" prefWidth="150.0"/>
                <TableColumn fx:id="courseDurationColumn" text="Duration" prefWidth="100.0"/>
                <TableColumn fx:id="courseTypeColumn" text="Course Type" prefWidth="100.0"/>
            </columns>
        </TableView>
    </children>
    <stylesheets>
        <URL value="@Courses.css" />
    </stylesheets>
</AnchorPane>
