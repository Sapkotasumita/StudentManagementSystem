<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dsgroup1.Controller.AttendanceController">

    <stylesheets>
        <URL value="@attendance.css" />
    </stylesheets>

    <children>
        <!-- Labels -->
        <Label layoutX="159.0" layoutY="27.0" text="Attendance" />
        <Label layoutX="50.0" layoutY="80.0" text="Student ID:" />
        <Label layoutX="50.0" layoutY="130.0" text="Date:" />
        <Label layoutX="50.0" layoutY="180.0" text="Status:" />

        <!-- Text Fields -->
        <TextField fx:id="studentIdField" layoutX="150.0" layoutY="75.0" prefWidth="200.0" />
        <DatePicker fx:id="dateField" layoutX="150.0" layoutY="125.0" />

        <!-- ChoiceBox for Status -->
        <ChoiceBox fx:id="statusChoiceBox" layoutX="150.0" layoutY="175.0" prefWidth="200.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Present" />
                    <String fx:value="Absent" />
                </FXCollections>
            </items>
        </ChoiceBox>

        <!-- Buttons -->
        <Button layoutX="68.0" layoutY="250.0" mnemonicParsing="false" onAction="#handleAdd" text="Add" />
        <Button layoutX="159.0" layoutY="250.0" mnemonicParsing="false" onAction="#handleRemove" text="Remove" />
        <Button layoutX="250.0" layoutY="250.0" mnemonicParsing="false" onAction="#handleSaveNewRecord" text="Save New Record" />
        <Button layoutX="400.0" layoutY="250.0" mnemonicParsing="false" onAction="#handleSaveAll" text="Save All" />
        <Button layoutX="500.0" layoutY="250.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />

        <!-- TableView -->
        <TableView fx:id="attendanceTable" layoutX="50.0" layoutY="300.0" prefHeight="150.0" prefWidth="500.0">
            <columns>
                <TableColumn fx:id="studentIdColumn" text="Student ID" />
                <TableColumn fx:id="dateColumn" text="Date" />
                <TableColumn fx:id="statusColumn" text="Status" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
