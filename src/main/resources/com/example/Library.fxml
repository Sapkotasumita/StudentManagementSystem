<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dsgroup1.Controller.LibraryController">
    <children>
        <!-- Text Fields and Labels -->
        <TextField fx:id="bookIdField" layoutX="163.0" layoutY="53.0" />
        <TextField fx:id="bookTitleField" layoutX="163.0" layoutY="99.0" />
        <TextField fx:id="authorField" layoutX="163.0" layoutY="145.0" />
        <TextField fx:id="publicationField" layoutX="163.0" layoutY="191.0" />

        <Button layoutX="53.0" layoutY="239.0" onAction="#handleAddBook" text="Add Book" />
        <Button layoutX="150.0" layoutY="239.0" onAction="#handleRemoveBook" text="Remove Book" />
        <Button layoutX="247.0" layoutY="239.0" onAction="#handleSubmit" text="Submit" />
        <Button layoutX="344.0" layoutY="239.0" onAction="#handleCancel" text="Cancel" />

        <Label layoutX="49.0" layoutY="60.0" text="Book ID" />
        <Label layoutX="49.0" layoutY="106.0" text="Book Title" />
        <Label layoutX="49.0" layoutY="152.0" text="Author" />
        <Label layoutX="49.0" layoutY="198.0" text="Publication" />

        <!-- TableView for library records -->
        <TableView fx:id="libraryTable" layoutX="50.0" layoutY="280.0" prefHeight="200.0" prefWidth="500.0">
            <columns>
                <TableColumn fx:id="bookIdColumn" text="Book ID" prefWidth="100.0"/>
                <TableColumn fx:id="bookTitleColumn" text="Book Title" prefWidth="150.0"/>
                <TableColumn fx:id="authorColumn" text="Author" prefWidth="150.0"/>
                <TableColumn fx:id="publicationColumn" text="Publication" prefWidth="100.0"/>
            </columns>
        </TableView>
    </children>
    <stylesheets>
        <URL value="@Library.css" />
    </stylesheets>
</AnchorPane>
